{
  "editor.formatOnSave": true, // this runs VSCode formatter instead of prettier which messes things up.  
  "editor.insertSpaces": false,
  "typescript.tsc.autoDetect": "on",
  "typescript.preferences.quoteStyle": "single",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "files.exclude": {
    "node_modules": true,
    "*/node_modules": true,
    "*/.next": true
  },
  "jestrunner.configPath": "frontend/jest.config.js",
  "jestrunner.jestPath": "/Users/damonskelhorn/.yarn/bin/jest",
  "eslint.lintTask.enable": true,
  "eslint.run": "onSave",
  "eslint.workingDirectories": [
    "/frontend/"
  ],
  "eslint.debug": true
}