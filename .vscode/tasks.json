{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "clean",
			"type": "shell",
			"command": "rm",
			"args": [
				"-rf",
				"${workspaceFolder}/frontend/node_modules/",
				"${workspaceFolder}/frontend/yarn.lock",
				"${workspaceFolder}/frontend/.next/",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "dev",
			"path": "frontend",
			"problemMatcher": [],
			"label": "dev - frontend",
			"detail": "next dev",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "build",
			"path": "frontend",
			"problemMatcher": [],
			"label": "build - frontend",
			"detail": "next build",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "test:watch",
			"path": "frontend",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "test - frontend",
			"detail": "jest --watchAll --env=jsdom"
		}
	]
}