{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "clean",
			"type": "shell",
			"command": "rm",
			"detail": "Remove node_modules, yarn.lock, and .next",
			"args": [
				"-rf",
				"${workspaceFolder}/frontend/node_modules/",
				"${workspaceFolder}/frontend/yarn.lock",
				"${workspaceFolder}/frontend/.next/"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "dev - frontend",
			"command": "yarn",
			"args": [
				"dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": [],
			"detail": "yarn dev",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "build - frontend",
			"command": "yarn",
			"args": [
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": [],
			"detail": "yarn build",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "lint - frontend",
			"command": "yarn",
			"args": [
				"lint"
			],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": [],
			"detail": "yarn lint",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "test - frontend",
			"command": "yarn",
			"args": [
				"test:watch"
			],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": [],
			"detail": "yarn test:watch"
		}
	]
}