{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:@next/next/recommended",
        "plugin:prettier/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "ignorePatterns": [
        "models",
        "src/ui-components",
        "node_modules/"
    ],
    "plugins": [
        "react"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {},
            {
                "usePrettierrc": true
            }
        ],
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 0,
        "@next/next/no-img-element": 0,
        "@typescript-eslint/no-explicit-any": 0
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}